algoritmo "Contagem_Regressiva_Pares - Para_Faça"
// Função :
// Autor :
// Data : 07/04/2022
// Seção de Declarações 
var
   cont, v: inteiro
inicio
      escreva("Digite um valor: ")
      leia(V)
      
      se (V % 2 = 1) entao
         V <- V - 1
      fimse
      
      para cont <- V ate 0 passo -2 faca
         escreval(cont)
      fimpara

fimalgoritmo
