algoritmo "creuza01"
// Função :
// Autor :
// Data : 30/03/2022
// Seção de Declarações 
var
   ano_atual, ano_nasc, idade : inteiro
inicio
      escreva("Em que ano nós estamos? ")
      leia(ano_atual)
      escreva("Em que ano eu nasci? ")
      leia(ano_nasc)
      idade <- ano_atual - ano_nasc
      escreva("Minha idade será",idade," anos.")

fimalgoritmo
