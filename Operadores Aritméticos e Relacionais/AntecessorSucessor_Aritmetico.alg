algoritmo "antecessor e sucessor"
// Função :
// Autor :
// Data : 24/03/2022
// Seção de Declarações 
var
   num : inteiro
   ant, suc: inteiro
inicio
      escreva("Insira um número: ")
      leia(num)
      ant <- num - 1
      suc <- num + 1
      escreval("O antecessor de", num," é", ant)
      escreval("O sucessor de", num," é", suc)
      
fimalgoritmo
