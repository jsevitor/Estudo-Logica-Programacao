algoritmo "contador regressivo"
// Função : exercicio 43
// Autor :
// Data : 13/05/2022
// Seção de Declarações 
var
   i: inteiro
   x: inteiro
inicio
   i <- 30
   enquanto (i > 0) faca
      se (i % 4 = 0) entao
         escreval(" [", i,"]")
      senao
         escreval(i)
      fimse
      i <- i - 1
   fimenquanto
fimalgoritmo
