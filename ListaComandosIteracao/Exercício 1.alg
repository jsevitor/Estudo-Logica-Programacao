algoritmo "Questão 1"
// Função :
// Autor :
// Data : 29/03/2022
// Seção de Declarações 
var
   x : inteiro
inicio
      escreva("Insira um número positivo: ")
      leia(x)
      
      se(x % 2 = 0) entao
        escreval("")
        escreval(x, ", É PAR!")
      senao
        escreval("")
        escreval(x, ", É IMPAR!")
      fimse

fimalgoritmo
